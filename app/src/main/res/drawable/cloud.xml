<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Нежная тень (смещена вниз-вправо) -->
    <item
        android:left="4dp"
        android:top="4dp">
        <shape android:shape="oval">
            <solid android:color="#33000000" /> <!-- Полупрозрачный черный -->
            <size
                android:width="150dp"
                android:height="100dp" />
            <stroke
                android:width="2dp"
                android:color="#99000000" />
        </shape>
    </item>

    <!-- Основной левый пузырь (самый большой) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
            <size
                android:width="150dp"
                android:height="100dp" />
            <stroke
                android:width="2dp"
                android:color="#99000000" />
        </shape>
    </item>

    <!-- Средний верхний пузырь -->
    <item
        android:left="40dp"
        android:top="15dp">
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="#99000000" />
            <solid android:color="#FFFFFF" />
            <size
                android:width="90dp"
                android:height="70dp" />
        </shape>
    </item>

    <!-- Правый пузырь -->
    <item
        android:left="100dp"
        android:top="30dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
            <size
                android:width="70dp"
                android:height="50dp" />
            <stroke
                android:width="2dp"
                android:color="#99000000" />
        </shape>
    </item>

    <!-- Маленький дополнительный пузырь для объема -->
    <item
        android:left="20dp"
        android:top="45dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
            <size
                android:width="50dp"
                android:height="30dp" />
            <stroke
                android:width="2dp"
                android:color="#99000000" />
        </shape>
    </item>

</layer-list>